@page "/libros/MostrarLibros"
<div class="card">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-sm-9">
                <h2 class="text-info">Mostrar Libros</h2>
            </div>
            <div class="col-sm-3">
                <a href="Libros/crear" class="btn btn-primary">Crear un Nuevo Libro</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>ID</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Paginas</th>
                <th>Fecha de Creacion</th>
                <th>Precio</th>
                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
            @foreach (var item in ListaLibros)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Titulo</td>
                    <td>@item.Autor</td>
                    <td>@item.paginas</td>
                    <td>@item.FechaPublicacion</td>
                    <td>@item.Precio</td>
                    <td>@item.Descripcion</td>
                </tr>    
            }
        </table>
    </div>
</div>

@code {
    private List<Libro> ListaLibros = new List<Libro>();//Lista de libros
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        ListaLibros = await Repository.GetLibros();
    }
    
}
